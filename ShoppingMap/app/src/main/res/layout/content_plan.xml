<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".PlanActivity"
    tools:showIn="@layout/activity_plan">


    <Button
        android:id="@+id/btnEGOG"
        android:layout_width="85dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="8dp"


        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/eg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/ivOG"
        android:layout_width="385dp"
        android:layout_height="0dp"

        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btnShowAllStores"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/forum_og" />

    <ImageView
        android:id="@+id/ivEG"
        android:layout_width="385dp"
        android:layout_height="0dp"

        app:layout_constraintBottom_toTopOf="@+id/btnShowAllStores"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/forum_eg" />

    <Button
        android:id="@+id/btnShowAllStores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorAccent"
        android:text="Show All Stores"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp"
        tools:ignore="MissingConstraints" />


</android.support.constraint.ConstraintLayout>